# Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# AI Service Configuration
# Choose one: ANTHROPIC or OPENAI
AI_PROVIDER=ANTHROPIC

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# OpenAI Configuration (alternative to Anthropic)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRY=24h

# Database Configuration (if using persistence)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_chatbot
REDIS_URL=redis://localhost:6379

# Speech-to-Text Service Configuration
# Google Speech-to-Text
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here
GOOGLE_PROJECT_ID=your_google_project_id

# Azure Speech Services (alternative)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region

# MCP Server Configuration
MCP_SERVERS_CONFIG_PATH=./config/mcp-servers.json
MCP_CONNECTION_TIMEOUT=30000
MCP_MAX_RETRIES=3

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
AUDIO_FORMATS=wav,mp3,ogg,webm

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Function Execution Configuration
FUNCTION_TIMEOUT_MS=30000
FUNCTION_MAX_MEMORY_MB=512
FUNCTION_SANDBOX_ENABLED=true

# System Integration Configuration
SYSTEM_API_BASE_URL=https://your-system-api.com
SYSTEM_API_KEY=your_system_api_key
SYSTEM_API_TIMEOUT=10000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
